---
export interface Props {
  title: string;
  description?: string;
  keywords?: string;
  ogImage?: string;
}

const { 
  title = "Perteneo - Tarjetas de Fidelidad Digitales para Restaurantes y Comercios",
  description = "Transforma tu negocio con tarjetas de fidelidad digitales en Google Wallet y Apple Wallet. Aumenta la retención de clientes con sellos, cupones y recordatorios automáticos. Sin descargas de apps.",
  keywords = "tarjetas de fidelidad digitales, retención de clientes, programa de lealtad restaurantes, fidelidad comercios, google wallet, apple wallet, sellos digitales, software fidelidad clientes, Colombia",
  ogImage = "/og-image.png"
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

// Import styles
import '../styles/global.css';
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="keywords" content={keywords} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(ogImage, Astro.url)} />
    <meta property="og:site_name" content="Perteneo" />
    <meta property="og:locale" content="es_CO" />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(ogImage, Astro.url)} />
    
    <!-- Additional SEO Meta Tags -->
    <meta name="robots" content="index, follow" />
    <meta name="author" content="Perteneo" />
    <meta name="theme-color" content="#1B365D" />
    <meta name="geo.region" content="CO" />
    <meta name="geo.country" content="Colombia" />
    
    <!-- Preconnect for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- Schema.org structured data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@graph": [
          {
            "@type": "Organization",
            "@id": "https://perteneo.com/#organization",
            "name": "Perteneo",
            "url": "https://perteneo.com",
            "logo": {
              "@type": "ImageObject",
              "url": "https://perteneo.com/logo.png"
            },
            "description": "Plataforma de tarjetas de fidelidad digital para restaurantes y comercios en Colombia",
            "address": {
              "@type": "PostalAddress",
              "addressCountry": "CO"
            },
            "contactPoint": {
              "@type": "ContactPoint",
              "contactType": "ventas",
              "email": "hola@perteneo.com",
              "availableLanguage": "Spanish"
            }
          },
          {
            "@type": "SoftwareApplication",
            "@id": "https://perteneo.com/#software",
            "name": "Perteneo",
            "applicationCategory": "BusinessApplication",
            "operatingSystem": "Web, iOS, Android",
            "description": "Plataforma de tarjetas de fidelidad digitales que ayuda a restaurantes y comercios a aumentar la retención de clientes a través de la integración con Google Wallet y Apple Wallet",
            "inLanguage": "es",
            "offers": {
              "@type": "Offer",
              "price": "0",
              "priceCurrency": "COP",
              "description": "Prueba gratuita disponible",
              "availableAtOrFrom": {
                "@type": "Country",
                "name": "Colombia"
              }
            },
            "provider": {
              "@id": "https://perteneo.com/#organization"
            }
          },
          {
            "@type": "FAQPage",
            "@id": "https://perteneo.com/#faq",
            "inLanguage": "es",
            "mainEntity": [
              {
                "@type": "Question",
                "name": "¿Qué es una acción en Perteneo?",
                "acceptedAnswer": {
                  "@type": "Answer",
                  "text": "Una acción se cuenta cada vez que se crea una tarjeta de fidelidad digital, cuando se actualizan sellos o cupones, o cuando se envía una notificación push a tus clientes."
                }
              },
              {
                "@type": "Question",
                "name": "¿Los clientes necesitan descargar una app?",
                "acceptedAnswer": {
                  "@type": "Answer",
                  "text": "No, los clientes usan su Google Wallet o Apple Wallet que ya tienen instalado. No se requieren descargas adicionales."
                }
              },
              {
                "@type": "Question",
                "name": "¿Cómo obtienen los clientes su tarjeta de fidelidad?",
                "acceptedAnswer": {
                  "@type": "Answer",
                  "text": "Los clientes simplemente escanean un código QR en tu local para guardar instantáneamente tu tarjeta de fidelidad digital en su billetera."
                }
              }
            ]
          }
        ]
      }
    </script>
    
    <!-- Google Analytics 4 -->
    <script is:inline>
      if (import.meta.env.GA4_MEASUREMENT_ID) {
        (function() {
          var script = document.createElement('script');
          script.async = true;
          script.src = 'https://www.googletagmanager.com/gtag/js?id=' + import.meta.env.GA4_MEASUREMENT_ID;
          document.head.appendChild(script);
          
          window.dataLayer = window.dataLayer || [];
          function gtag(){dataLayer.push(arguments);}
          gtag('js', new Date());
          gtag('config', import.meta.env.GA4_MEASUREMENT_ID);
        })();
      }
    </script>
    
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>